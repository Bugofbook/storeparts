{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bugofbook/store-modal": ["packages/store-modal/src/index.ts"],
      "@bugofbook/store-parts": ["packages/store-parts/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
