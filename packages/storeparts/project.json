{
  "name": "@bugofbook/store-parts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/storeparts/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/store-parts",
        "main": "packages/storeparts/src/index.ts",
        "tsConfig": "packages/storeparts/tsconfig.lib.json",
        "assets": [],
        "additionalEntryPoints": [
          "packages/storeparts/src/lib/state/state.ts",
          "packages/storeparts/src/lib/observerKey/observerKey.ts",
          "packages/storeparts/src/lib/entity/entity.ts",
          "packages/storeparts/src/lib/reducer/reducer.ts",
          "packages/storeparts/src/lib/observer/observer.ts"
        ],
        "generateExportsField": true,
        "project": "packages/storeparts/package.json",
        "compiler": "swc",
        "format": ["esm", "cjs"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs observer {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/storeparts/jest.config.ts"
      }
    }
  },
  "tags": []
}
